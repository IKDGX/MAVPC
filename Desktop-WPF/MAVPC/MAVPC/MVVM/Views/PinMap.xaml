<UserControl x:Class="MAVPC.MVVM.Views.Controls.PinMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="50" Width="40">
    <Grid RenderTransformOrigin="0.5,1">

        <Ellipse Width="16" Height="6" Fill="Black" Opacity="0.4" 
                 VerticalAlignment="Bottom" Margin="0,0,0,-3">
            <Ellipse.Effect>
                <BlurEffect Radius="4"/>
            </Ellipse.Effect>
        </Ellipse>

        <Path x:Name="FondoPin"
              Data="M20,0 C31.04,0 40,8.95 40,20 C40,35 20,50 20,50 C20,50 0,35 0,20 C0,8.95 8.95,0 20,0 Z"
              Fill="#00D4FF"
              Stretch="Fill"
              Margin="0,0,0,5">
            <Path.Effect>
                <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
            </Path.Effect>
        </Path>

        <Ellipse Width="26" Height="26" Fill="White" Margin="0,0,0,15"/>

        <materialDesign:PackIcon x:Name="IconoPin"
                                 Kind="Cctv"
                                 Width="18" Height="18"
                                 Foreground="#333333"
                                 VerticalAlignment="Center" HorizontalAlignment="Center"
                                 Margin="0,0,0,15"/>
    </Grid>
</UserControl>